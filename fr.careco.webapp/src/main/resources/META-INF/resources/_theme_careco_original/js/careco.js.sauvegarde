            htmlBoite += "</div>";
        }

        htmlBoite += "</div>";
        //alert(htmlBoite);

        $("#obsBoite").html(htmlBoite);
        $("#tabsB").tabs();
    }
    
//$("#obs").text(response['bodytype']);
}

